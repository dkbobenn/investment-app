<h2>Stock Overview</h2>

<div>  
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">Sell</th>
        <th scope="col">Sell partly</th>
        <th id="stockName" scope="col">Name</th>
        <th scope="col">Number of stocks</th>
        <th scope="col">Buying Price</th>
        <th scope="col">Current Price</th>
      </tr>
    </thead>
    <tbody>
      {{#each stockInfoOutput}}
        <tr>
            <td><form action="/stock-sell/{{_id}}/delete" method="POST">
                <button>Sell all</button>
            </form></td>

            <td><form action="/stock-update/{{_id}}/edit" method="POST">
              <label>
                <input type="number" name="update" placeholder="Number to sell" min="1">
              </label>
                <button>Sell part</button>
            </form></td>

            <td scope="row">{{stockName}}</td>
            <td scope="row">{{stockNumber}}</td>
            <td scope="row">{{buyingPrice}}</td>
            <td scope="row">{{stockOpenValue}}</td>
            <td scope="row">{{stockValue}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>

{{#if errorMessage}}
    <p class="error">{{errorMessage}}</p>
{{/if}}
